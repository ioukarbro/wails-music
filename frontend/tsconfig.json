{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "esnext",
      "dom"
    ]
  },
  "include": [
//    "src/**/*.ts",
//    "src/**/*.d.ts",
//    "src/**/*.tsx",
//    "src/**/*.vue",
//    "src/App.vue"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
